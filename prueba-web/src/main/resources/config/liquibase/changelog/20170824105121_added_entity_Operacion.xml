<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2" />

    <property name="now" value="current_timestamp" dbms="postgresql" />

    <property name="floatType" value="float4" dbms="postgresql, h2" />
    <property name="floatType" value="float" dbms="mysql, oracle, mssql" />

    <!-- Added the entity Operacion. -->
    <changeSet id="20170824105121-1" author="jhipster">
        <createSequence sequenceName="operacion_id_seq" startValue="1000" incrementBy="50" />
        <createTable tableName="operacion">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false" />
            </column>

            <column name="opt_lock" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="accion" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="sujeto" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove -->
        </createTable>

        <createTable tableName="roles_operaciones">
            <column name="operacion_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="rol_id" type="bigint">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey columnNames="operacion_id, rol_id" tableName="roles_operaciones" />

        <addForeignKeyConstraint baseColumnNames="rol_id" baseTableName="roles_operaciones" constraintName="fk_roles_operaciones_rol_id"
            referencedColumnNames="id" referencedTableName="rol" />

        <addForeignKeyConstraint baseColumnNames="operacion_id" baseTableName="roles_operaciones" constraintName="fk_roles_operaciones_operacion_id"
            referencedColumnNames="id" referencedTableName="operacion" />

        <loadData encoding="UTF-8" file="config/liquibase/operaciones.csv" separator=";" tableName="operacion" />
    </changeSet>

</databaseChangeLog>
